<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="b.fast" transaction-type="RESOURCE_LOCAL">
    	<class>model.Menu</class>
    	<class>model.Appartiene</class>
    	<class>model.Bar</class>
    	<class>model.Contiene</class>
    	<class>model.Fattorino</class>
    	<class>model.Ordine</class>
    	<class>model.Prodotto</class>
    	<class>model.Utente</class>
        <properties>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/b.fast?serverTimezone=America/Los_Angeles"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>